<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.simplisell">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera"/>
    <application
            android:allowBackup="true"
            android:fullBackupContent="true"
            android:icon="@drawable/logo"
            android:label="@string/app_name"
            android:roundIcon="@drawable/logo"
            android:supportsRtl="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".presentation.userprofileactivity.ProfileInformation">

        </activity>
        <activity android:name=".presentation.userprofileactivity.UsersOwnAds" />
        <activity android:name=".presentation.postingadactivity.ViewAdOfOtherUser"/>
        <activity android:name=".presentation.postingadactivity.EditAd"/>
        <activity android:name=".presentation.postingadactivity.ViewAdOfCurrentUser"/>
        <activity android:name=".presentation.userprofileactivity.UserProfileMenu"/>
        <activity android:name=".presentation.loginactivity.SignUp"/>
        <activity android:name=".presentation.postingadactivity.PostAd"/>
        <activity android:name=".presentation.loginactivity.Login"/>
        <activity android:name=".presentation.MainActivity"/>
        <activity android:name=".presentation.loginactivity.ForgetPassword"/>
        <activity android:name=".presentation.useradminactivity.ReportedAds" />
        <activity android:name=".presentation.useradminactivity.ReportedUsers" />
        <activity android:name=".presentation.Messages" />
        <activity android:name=".presentation.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".presentation.useradminactivity.AdminHomeScreen">
            <intent-filter>
                <action android:name="android.intent.action.AdminHomeScreen"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <meta-data
                android:name="preloaded_fonts"
                android:resource="@array/preloaded_fonts"/>
    </application>



</manifest>
