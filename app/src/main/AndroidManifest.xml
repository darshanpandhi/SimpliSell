<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.simplisell">

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@drawable/twotone_sentiment_satisfied_white_48"
        android:label="@string/app_name"
        android:roundIcon="@drawable/twotone_sentiment_satisfied_white_48"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <activity android:name=".presentation.SignUp"/>

        <activity android:name=".presentation.Login" />

        <activity android:name=".presentation.MainActivity" />
        <activity android:name=".presentation.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
